<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomeCalcmain"

    android:background="#ebf4ff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name "
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/etmainname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="your name"
        android:textSize="16dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"

        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:hint="Your Age"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"

        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Gender" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:hint="Your Gender"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"

        android:textSize="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Members in Family" />

    <EditText
        android:id="@+id/etnooffamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="No of members"
        android:textSize="16dp"
        android:paddingLeft="10dp"/>


    <Button
        android:id="@+id/btnproceed"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:backgroundTint="#f79bcb"
        android:minWidth="100dp"/>
</LinearLayout>